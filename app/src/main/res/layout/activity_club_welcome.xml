<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.ClubWelcome"
    android:padding="20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activities.Registration">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/welcomeTextView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/welcome"
                    android:textSize="40sp"
                    android:fontFamily="@font/bubblebobble"
                    android:textColor="@color/darkbrown"/>

                <TextView
                    android:id="@+id/welcomeRoleTextView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="24dp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/EventEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:hint="Please enter an event name"
                    app:boxStrokeColor="@color/darkbrown"
                    app:boxBackgroundColor="@color/eggwhite"
                    android:layout_marginBottom="10dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/quicksand_bold"
                        android:textColor="@color/darkbrown"/>
                </com.google.android.material.textfield.TextInputLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="center">

                    <Button
                        android:id="@+id/AddEventButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="onAddEventButton"
                        android:text="Add"
                        app:backgroundTint="@color/green"
                        app:strokeWidth="3dp"
                        app:strokeColor="@color/darkbrown"
                        android:textColor="@color/eggwhite"
                        android:fontFamily="@font/bubblebobble"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"/>

                    <Button
                        android:id="@+id/editEventButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:onClick="onEditEventButton"
                        android:text="Edit"
                        app:backgroundTint="@color/orange"
                        app:strokeWidth="3dp"
                        app:strokeColor="@color/darkbrown"
                        android:textColor="@color/eggwhite"
                        android:fontFamily="@font/bubblebobble"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"/>

                    <Button
                        android:id="@+id/deleteEventButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="onDeleteEventButton"
                        android:text="Delete"
                        app:backgroundTint="@color/red"
                        app:strokeWidth="3dp"
                        app:strokeColor="@color/darkbrown"
                        android:textColor="@color/eggwhite"
                        android:fontFamily="@font/bubblebobble"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"/>
                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="24dp" />

                <Button
                    android:id="@+id/SearchParticipantsEventButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/bubblebobble"
                    android:onClick="onSearchParticipantsButton"
                    android:text="Search Participants In Event"
                    android:textColor="@color/eggwhite"
                    app:backgroundTint="@color/orange"
                    app:strokeColor="@color/darkbrown"
                    app:strokeWidth="3dp" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="24dp" />

                <TextView
                    android:id="@+id/welcomeTextView10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Ratings"
                    android:textSize="40sp"
                    android:fontFamily="@font/bubblebobble"
                    android:textColor="@color/darkbrown"/>

                <TextView
                    android:id="@+id/welcomeTextView11"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="No Ratings Found"
                    android:textSize="20sp"
                    android:fontFamily="@font/quicksand_bold"
                    android:textColor="@color/darkbrown"/>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="24dp" />


            </LinearLayout>
        </ScrollView>

    </RelativeLayout>
</LinearLayout>